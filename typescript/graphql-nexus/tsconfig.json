{
  "compilerOptions": {
    "target": "ES2019",                       
    "lib": ["esnext"],
    "declaration": true,    
    "sourceMap": true,    
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "typeRoots": ["node_modules/@types", "src/typings", "generated", "generated/fujix"],
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "generated/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}